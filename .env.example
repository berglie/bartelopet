# ============================================================
# Barteløpet - Environment Variables Template
# ============================================================
#
# Copy this file to .env.local and fill in your values:
# cp .env.example .env.local
#
# NEVER commit .env.local to Git!
# See ENV_EXAMPLE.md for detailed documentation
# ============================================================

# ============================================================
# SUPABASE CONFIGURATION (Required)
# ============================================================
# Get from: https://supabase.com → Project Settings → API

NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================================
# APPLICATION CONFIGURATION (Required)
# ============================================================

NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================================
# EMAIL CONFIGURATION - RESEND (Required for contact form)
# ============================================================
# Get from: https://resend.com/api-keys

RESEND_API_KEY=re_your_resend_api_key_here
CONTACT_FORM_ADMIN_EMAIL=admin@barteløpet.no

# ============================================================
# MAPBOX CONFIGURATION (Required for maps)
# ============================================================
# Get from: https://account.mapbox.com/access-tokens/
# Configure URL restrictions to limit usage to your domains

NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_public_token_here

# ============================================================
# RATE LIMITING - UPSTASH REDIS (Required for production)
# ============================================================
# Get from: https://console.upstash.com → Create Database → REST API
# Required for DDoS protection and rate limiting
# Without this, rate limiting will be disabled (NOT recommended for production)

UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# ============================================================
# OPTIONAL - ANALYTICS & MONITORING
# ============================================================

# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=
# SENTRY_DSN=
# SENTRY_AUTH_TOKEN=
# SENTRY_ORG=
# SENTRY_PROJECT=
# NEXT_PUBLIC_GA_MEASUREMENT_ID=

# ============================================================
# OPTIONAL - FEATURE FLAGS
# ============================================================

# NEXT_PUBLIC_ENABLE_VOTING=true
# NEXT_PUBLIC_ENABLE_REGISTRATION=true
# NEXT_PUBLIC_ENABLE_GALLERY=true
