{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@features/*": ["./features/*"],
      "@shared/*": ["./features/shared/*"],
      "@public-pages/*": ["./features/public-pages/*"],
      "@participants/*": ["./features/participants/*"],
      "@gallery/*": ["./features/gallery/*"],
      "@auth/*": ["./features/auth/*"],
      "@registration/*": ["./features/registration/*"],
      "@completions/*": ["./features/completions/*"],
      "@voting/*": ["./features/voting/*"],
      "@dashboard/*": ["./features/dashboard/*"],
      "@comments/*": ["./features/comments/*"],
      "@year-management/*": ["./features/year-management/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
